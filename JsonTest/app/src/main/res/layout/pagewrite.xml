<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/LinearLayout" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="오늘은 yyyy년 MM월 dd일 입니다."
                    android:layout_width="match_parent"
                    android:layout_height="70dp" android:id="@+id/textView12" android:layout_weight="1"/>
            <TextView
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" android:id="@+id/textView22" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="90dp">
        <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="판매날짜"
                android:layout_width="102dp"
                android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"/>
        <Spinner
                android:entries="@array/year_entries"
                android:layout_width="90dp"
                android:layout_height="match_parent" android:id="@+id/spinner" android:layout_weight="1"/>
        <Spinner
                android:entries="@array/month_entries"
                android:layout_width="90dp"
                android:layout_height="match_parent" android:id="@+id/spinner2" android:layout_weight="1"/>
        <Spinner
                android:entries="@array/day_entries"
                android:layout_width="90dp"
                android:layout_height="match_parent" android:id="@+id/spinner3" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="90dp">
        <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="종류"
                android:layout_width="102dp"
                android:layout_height="90dp" android:id="@+id/textView2" android:layout_weight="1"/>
        <Spinner
                android:entries="@array/type_entries"
                android:layout_width="290dp"
                android:layout_height="match_parent" android:id="@+id/spinner4" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="90dp">
        <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="가격"
                android:layout_width="102dp"
                android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="1"/>
        <EditText
                android:inputType="number"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="260dp"
                android:layout_height="50dp" android:id="@+id/edit_content2" android:layout_weight="1"/>
        <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="원"
                android:layout_width="30dp"
                android:layout_height="match_parent" android:id="@+id/textView6" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="362dp"
            android:layout_height="90dp">
        <TextView

                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="전화번호"
                android:layout_width="102dp"
                android:layout_height="90dp" android:id="@+id/textView7" android:layout_weight="1"/>
        <EditText
                android:inputType="number"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="260dp"
                android:layout_height="50dp" android:id="@+id/edit_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="90dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="match_parent">
        </LinearLayout>
        <Button
                android:background="#00ff0000"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="등록"
                android:layout_width="103dp"
                android:layout_height="90dp" android:id="@+id/button" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="20dp"
                android:layout_height="match_parent">
        </LinearLayout>
        <Button
                android:background="#00ff0000"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="취소"
                android:layout_width="103dp"
                android:layout_height="90dp" android:id="@+id/button2" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
